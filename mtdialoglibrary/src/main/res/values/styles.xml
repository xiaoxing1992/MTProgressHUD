<resources>

    <!-- 自定义Dialog -->
    <style name="MTCustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--无遮罩效果-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <declare-styleable name="MTProgressWheel">
        <attr name="mt_progressIndeterminate" format="boolean" />
        <attr name="mt_barColor" format="color" />
        <attr name="mt_rimColor" format="color" />
        <attr name="mt_rimWidth" format="dimension" />
        <attr name="mt_spinSpeed" format="float" />
        <attr name="mt_barSpinCycleTime" format="integer" />
        <attr name="mt_circleRadius" format="dimension" />
        <attr name="mt_fillRadius" format="boolean" />
        <attr name="mt_barWidth" format="dimension" />
        <attr name="mt_linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MTCircularProgressBar">
        <attr name="mt_progress" format="integer" />
        <attr name="mt_progressbar_color" format="color" />
        <attr name="mt_background_progressbar_color" format="color" />
        <attr name="mt_progressbar_width" format="dimension" />
        <attr name="mt_background_progressbar_width" format="dimension" />
    </declare-styleable>

</resources>
